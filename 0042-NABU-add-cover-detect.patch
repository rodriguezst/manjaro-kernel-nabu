@@ -199,6 +199,20 @@ key-vol-up {
 			wakeup-source;
 		};
 	};
+
+	gpio-hall-sensor {
+		compatible = "gpio-keys";
+		label = "Hall sensors";
+
+		event-hall-sensor0 {
+			label = "Cover Hall Sensor 0";
